# Server Configuration
NODE_ENV=development
PORT=5000
SERVER_URL=http://localhost:5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/tabitha-home
# Or for MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/tabitha-home

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRE=7d

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Nigerian SMS Service (optional)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=TABITHA